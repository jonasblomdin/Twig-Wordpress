<label class="screen-reader-text" for="{{ name }}">
  {{ wp.__('Custom Template') }}
</label>
<select name="{{ name }}">
  <option value="">{{ wp.__('Default Template') }}</option>
{% for file, name in templates %}
  <option value="{{ file }}"{% if value == file %} selected="selected"{% endif %}>{{ name }}</option>
{% endfor %}
</select>